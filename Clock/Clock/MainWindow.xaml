<Window x:Class="Clock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clock"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Analog Clock" Height="500" Width="500" SizeChanged="Window_SizeChanged">
    <Grid>
        <Grid x:Name="clockSpace" Width="400" Margin="8" HorizontalAlignment="Center" Height="400" VerticalAlignment="Center">
            <Canvas x:Name="clock" HorizontalAlignment="Center" VerticalAlignment="Center" Width="0" Height="0" >
                <Ellipse x:Name="clockCenter" Fill="Black" Width="8" Height="8" Canvas.Left="-4" Canvas.Top="-4"/>
                <Ellipse x:Name="clockCircumference" Stroke="Black" MinWidth="400" MinHeight="400"  />
            </Canvas>
        </Grid>
    </Grid>
</Window>
